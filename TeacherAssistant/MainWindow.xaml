<Window x:Class="TeacherAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeacherAssistant"
        mc:Ignorable="d"
        Title="Assistant" MinHeight="450" MinWidth="800"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition  Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Файл">
                    <MenuItem Header="Выбрать базу данных" Click="SelectDatabase_Click"></MenuItem>
                    <MenuItem Header="Подключить считыватель" Click="ConnectReader_Click"></MenuItem>
                    <MenuItem Header="Отключить считыватель" Click="DisconnectReader_Click"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <TabControl Grid.Row="1" HorizontalAlignment="Stretch" ItemsSource="{Binding Path=Tabs}" SelectedItem="{Binding Path=ActiveTab}">
        </TabControl>

    </Grid>

</Window>