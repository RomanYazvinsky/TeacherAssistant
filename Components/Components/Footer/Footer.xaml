<componentsImpl:View x:TypeArguments="local:FooterModel" x:Class="TeacherAssistant.Footer.Footer"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:TeacherAssistant.Footer"
                     xmlns:componentsImpl="clr-namespace:TeacherAssistant.ComponentsImpl"
                     mc:Ignorable="d"
                     d:DesignHeight="25" d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance local:FooterModel}">
    <Grid>
        <StatusBar Background="Transparent" ItemsSource="{Binding Path=StatusItems}" HorizontalAlignment="Stretch"
                   VerticalAlignment="Top" />

    </Grid>
</componentsImpl:View>