<UserControl
    x:Class="TeacherAssistant.Pages.CommonStudentLessonViewPage.CellTemplates.StudentNameCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Открыть" Click="OpenStudent" />
            </ContextMenu>
        </Grid.ContextMenu>
        <Popup MaxWidth="200" IsOpen="False" MaxHeight="300" Grid.Column="0" StaysOpen="False" x:Name="Popup">
            <Image x:Name="Image" />
        </Popup>
        <Button Grid.Column="1" Padding="0" Background="Transparent" BorderThickness="0" Click="ButtonBase_OnClick">
            <fa5:ImageAwesome Icon="Solid_Portrait" Width="20" Height="20"/>
        </Button>
        <TextBlock Grid.Column="2" Text="{Binding Path=FullName}" />
    </Grid>
</UserControl>
