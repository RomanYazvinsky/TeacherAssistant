<UserControl x:Class="TeacherAssistant.Components.Logger.LoggerLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeacherAssistant.Components.Logger"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="Logger"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch">
    <Grid>
        <TextBox HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding Log}" VerticalAlignment="Stretch" IsEnabled="False"/>

    </Grid>
</UserControl>
