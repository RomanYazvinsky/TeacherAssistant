<UserControl x:Class="TeacherAssistant.Components.Photo.Photo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeacherAssistant.Components.Photo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="PhotoControl">
    <Grid>
        <Image Source="{Binding StudentPhoto}" Name="StudentPhoto" HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch"  />
    </Grid>
</UserControl>
